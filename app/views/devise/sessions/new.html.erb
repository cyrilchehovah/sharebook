<div class="container">
  <div class="row">
     <div class="col-sm-4 col-sm-offset-4 signup-box">
      <h2 class= "text-center"> Se connecter </h2>
      <br>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Connexion",class: "btn btn-primary btn-facebook", style: "width: 100%; height: 50px;" %>
        </div>
      <% end %>

      <div class="signup-or-separator">
        <span class="signup-or-separator--text"> ou </span>
        <hr>
      </div>

      <%= link_to omniauth_authorize_path(resource_name, :facebook), class: "btn btn-primary btn-facebook", style: "width: 100%; background-color: #3A5795" do %>
        <i class="fa fa-facebook fa-2x fb-button" ></i>Sign in with <%= :facebook.to_s.titleize %>
      <% end %>

      <%= render "devise/shared/links" %>
     </div>
  </div>
</div>
