<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <%= image_tag("https://unsplash.it/260/324", class: "img-responsive") %>
    </div>
    <div class="col-sm-8">
      <h2> <%= @book.title %> </h2> <br>
      <h3> <%= @book.author %> </h3> <br>
      <p class="badge"> <%= @book.category %> </p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <p> <%= @book.description %> </p>
    </div>
  </div>
  <hr>
  <div class="row">
    <% if @book.offers.count == 1 %>
        <h3>Il y a actuellement un livre disponible, r√©servez le vite!</h3>
    <% elsif @book.offers.count >= 1 %>
        <h3>Il y a actuellement <%= @book.offers.count %> livres disponibles </h3>
    <% end %>
    <div class="">
      <% @users.each do |user|%>
        <p><%= user.email %></p>
      <% end %>
    </div>

    <div id="map" style="width: 100%; height: 600px;"></div>
    <% content_for(:after_js) do %>
      <%= javascript_tag do %>
        $(document).on('ready', function() {
          handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function(){
            markers = handler.addMarkers(<%= raw @markers.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
          });
        })
      <% end %>
    <% end %>
  </div>
</div>
