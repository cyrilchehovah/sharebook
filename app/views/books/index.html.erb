<div class="container">
  <div class="row">
    <h1 class="text-center">Index books</h1>
    <div class="padded">
      <div class="container">
        <div class="row">
          <% @array.each do |book| %>
             <div class="col-xs-12 col-sm-4">
              <div class="card">
                 <div class="img-medium" style="background-image:url('<%= image_url book.image %>')"></div>
                 <div class="card-bloc">
                  <div class="padded">
                    <h2><%= book.title %></h2>
                    <p><%= book.description %></p>
                    <div class="user-badge user-badge-red"><%= book.offers.count%></div>
                    <p><span class="badge"><%= book.category %></span> - <%= book.author %></p>
                  </div>
                 </div>
              </div>
             </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
