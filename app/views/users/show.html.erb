<div class="container">
  <div class="row">
    <div class="card">
      <div class="row">
        <div class="col-sm-4">
          <%=image_tag @user.picture, class: "img-responsive img-circle center-block" %>
        </div>
        <div class="col-sm-8">
          <h1><%= @user.first_name %> <%= @user.last_name %></h1>
          <h2><%= @user.address1 %></h2>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequuntur ratione praesentium, reprehenderit maiores similique eveniet sed facilis fuga itaque autem amet officiis aut saepe iure libero nam accusantium sunt provident!</p>
          <!-- Editer profil -->
          <% if @user.id== current_user.id %>
            <%= link_to edit_user_registration_path do %>
            <p><i class="fa fa-pencil"></i> Éditer mon profil</p>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row"><!--Debut row-->
    <div class="padded">
      <div class="col-sm-12">
        <h2 class="text-center">Ses livres</h2>
        <% @books.each do |book| %>
         <div class="card-book">
            <div class="col-xs-12 col-sm-4">
             <%= link_to book_path(book) do %>
               <div class="card-image" style='background-image: url("<%= image_url book.image %>")'></div>
             <% end %>
               <div class="card">
                 <h2><%= book.title %></h2>
                 <p><%= book.category %></p>
                 <h4><%= book.author %></h4>
                 <h4 class="card-footer"><i class="fa fa-map-marker fa-lg green"></i> <%= book.offers.count%> prêteurs</h4>
               </div>
             </div>
           </div>
        <% end %>
      </div>
    </div>
  </div><!--Fin row-->
  <div class="row"><!--Debut row-->
    <div class="padded">
      <div class="col-sm-12">
        <h2 class="text-center">Ses emprunts</h2>
        <% @bookings.each do |booking| %>
         <div class="card-book">
            <div class="col-xs-12 col-sm-4">
               <div class="card-image" style="background-image:url('<%= image_url booking.offer.book.image %>')"></div>
               <div class="card">
                 <h2><%= booking.offer.book.title %></h2>
                 <p><%= booking.offer.book.category %></p>
                 <h4><%= booking.offer.book.author %></h4>
               </div>
             </div>
           </div>
        <% end %>
      </div>
    </div>
  </div><!--Fin row-->
  <div class="row"><!--Debut row-->
    <div class="padded">
      <div class="col-sm-12">
        <h2 class="text-center">Ses demandes</h2>
        <% @bookings.each do |booking| %>
         <div class="card-book">
            <div class="col-xs-12 col-sm-4">
               <div class="card-image" style="background-image:url('<%= image_url booking.offer.book.image %>')"></div>
               <div class="card">
                 <h2><%= booking.offer.book.title %></h2>
                 <p><%= booking.offer.book.category %></p>
                 <h4><%= booking.offer.book.author %></h4>
                 <button class="btn btn-success" type="submit">Accepter</button>
               </div>
             </div>
           </div>
        <% end %>
      </div>
    </div>
  </div><!--Fin row-->
</div>
