<nav class="navbar-wagon">
  <div class="container navbar-wagon-container">

    <%= link_to root_path do %>
      <%= image_tag "logo.png" %>
    <% end %>

    <div class="navbar-wagon-pusher"></div>

    <%= link_to books_path do %>
    La bibliothèque
    <% end %>
    <hr>
      <% if current_user==nil %>

          <div class="navbar-wagon-item">
            <div class="dropdown">
              <%= link_to "Se connecter", new_user_session_path %>
            </div>
          </div>
          <div class="navbar-wagon-item">
            <div class="dropdown">
              <%= link_to "S'inscrire", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn"  %>
            </div>
          </div>

      <% else %>
        <%= link_to bookings_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <div class="icon-badge-container">
            <i class="fa fa-envelope-o"></i>
            <div class="icon-badge icon-badge-blue">2</div>
          </div>
        <% end %>
        <hr>

        <div class="navbar-wagon-item">

          <div class="dropdown">
            <%= image_tag (current_user.profil_img ? current_user.profil_img : current_user.picture.url(:thumb)), class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <i class="fa fa-user"></i> <%= t ".profile", default: "Mon profil" %>
                <% end %>
              </li>
              <li>
                <%= link_to bookings_path do %>
                  <i class="fa fa-book"></i>  <%= t ".profile", default: "Mes réservations" %>
              <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t ".profile", default: "Se déconnecter" %>
              <% end %>
              </li>
            </ul>
          </div>
        </div>
        <%= link_to t(".top_call_to_action", default: "Ajouter un livre"), new_offer_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
      <% end %>
  </div>
</nav>
